extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  .auth-page
    .auth-container
      h1 Đăng ký tài khoản
      form(
        action="/user/register"
        method="POST"
      )
        div(class="form-group")
          label(for="fullName" class="form-label") Họ và tên
          input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
          )
        
        div(class="form-group")
          label(for="email" class="form-label") Email
          input(
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          )
        div(class="form-group")
          label(for="password" class="form-label") Mật khẩu
          input(
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          )

        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Đăng ký

